{
  "name": "basic-starter-kit",
  "version": "1.0.0",
  "engines": {
    "node": ">=4.0.0"
  },
  "description": "A basic project for running some node.js code with tests",
  "main": "index.js",
  "scripts": {
    "prestart": "node ./buildScripts/startMessage.js",
    "start": "npm-run-all --parallel security-check start:src lint:watch test:watch",
    "start:src": "node lib/index.js",
    "start:loop": "nodemon lib/index.js",
    "security-check": "nsp check",
    "lint": "esw src lib buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress \"lib/**/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Rolias/basic-starter-kit.git"
  },
  "keywords": [
    "tdd",
    "starter-kit"
  ],
  "author": "Tod Gentille",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rolias/basic-starter-kit/issues"
  },
  "homepage": "https://github.com/Rolias/basic-starter-kit#readme",
  "dependencies": {
    "winston": "x"
  },
  "devDependencies": {
    "@types/node": "x",
    "chai": "x",
    "eslint": "x",
    "eslint-watch": "x",
    "mocha": "x",
    "npm-run-all": "x",
    "nyc": "x",
    "sinon": "x"
  }
}