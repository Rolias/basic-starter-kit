{
  "name": "basic-starter-kit",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=4.0.0"
  },
  "description": "A basic project for running some node.js code with tests",
  "main": "index.js",
  "scripts": {
    "prestart": "node ./buildScripts/startMessage.js",
    "start": "run-p security-check start:src lint:watch test:watch",
    "start:src": "node src/index.js",
    "start:loop": "nodemon src/index.js",
    "security-check": "npm audit",
    "lint": "esw src src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "watch": "run-p lint:watch test:watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Rolias/basic-starter-kit.git"
  },
  "keywords": [
    "tdd",
    "starter-kit"
  ],
  "author": "Tod Gentille",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rolias/basic-starter-kit/issues"
  },
  "homepage": "https://github.com/Rolias/basic-starter-kit#readme",
  "dependencies": {
    "winston": "x"
  },
  "devDependencies": {
    "@types/node": "x",
    "chai": "x",
    "eslint": "x",
    "eslint-watch": "x",
    "jsdoc": "^3.5.5",
    "mocha": "x",
    "nodemon": "^1.18.10",
    "npm-run-all": "x",
    "nyc": "x",
    "sinon": "x"
  }
}